<div class="container">
    <div class="row align-items-center">
        <div class="col text1">EAT-</div>

        <div class="col">

            <img src="/assets/img/burger.jpg" alt="image of a burger" id="bigBurger" />

        </div>
        <div class="col-auto text2">DA-BURGER!</div>
    </div>


    <div class="row align-items-center">
        <div class="col toEat">
            <h2>Burgers to eat!</h2>
            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p><span class="label"></span> {{this.burger_name}}</p>
                    <button data-id="{{this.id}}" class="devour">Devour burger</button>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>

        <div class="col placeholder"></div>

        <div class="col devoured">
            <h2>Devoured Burgers!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <p><span class="label"></span> {{this.burger_name}}</p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row"></div>

    <div class="row justify-content-center">
        <div class="col-8 text-center addBurger">
            <h2>Add a Burger</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-8 text-center">
            <form class="add-burger">

                <div>
                    <label for="newBurger"></label>
                    <input type="text" id="newBurger" name="burgerName">
                </div>
                <button type="submit" id="subBurger">Add Burger</button>
            </form>
        </div>
    </div>
</div>